{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "module": "ES2020",

    "sourceMap": true,
    "declaration": true,
    "newLine": "lf",
    "stripInternal": true,
    "pretty": true,
    "emitDeclarationOnly": true,

    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "bin", "src/lib/styles.test.ts", "src/tools.test.ts"]
}
